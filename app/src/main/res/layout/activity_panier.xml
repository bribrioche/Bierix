<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E4CF"
    tools:context=".Panier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9E4CF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-49dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:fontFamily="@font/caviar_dreams_bold"
            android:paddingTop="30dp"
            android:text="Mon Panier"
            android:textColor="#5F4B35"
            android:textAlignment="center"
            android:textSize="27dp" />

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="1 x La Trappe"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnMoins"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="#F9E4CF"
                android:paddingLeft="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/quantite_moins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="#F9E4CF"
                android:paddingRight="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/quantite_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="2,70€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Livraison"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="238dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="1,50€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Taxe"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="260dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="Incluse"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Total"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="257dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="4,20€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/promo"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/promo"
                android:gravity="center"
                android:textSize="12dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:text="Code promo"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"

                android:textAppearance="@style/promo" />

            <TextView
                android:id="@+id/paiement"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/paiement"
                android:fontFamily="@font/caviar_dreams_bold"
                android:gravity="center"
                android:text="Paiement"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/paiement"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/caviar_dreams"
            android:text="Vous aimeriez aussi..."
            android:textAlignment="center"
            android:textColor="#5F4B35"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E4EAD8C6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView82"
                    android:layout_width="178dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/chouffe_noel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="145dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="Chouffe de Noël"
                            android:textColor="#5f4b35"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.228"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView52"
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="44dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="4,4"
                            android:textColor="#5f4b35"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.279"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView42"
                            android:layout_width="119dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="80dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="Voir la fiche"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#5f4b35"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.51"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ajout2"
                            android:layout_width="155dp"
                            android:layout_height="31dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="112dp"
                            android:background="@drawable/paiement"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:gravity="center"
                            android:text="Ajouter au panier"
                            android:textAppearance="@style/paiement"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView92"
                            android:layout_width="28dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="1dp"
                            app:layout_constraintEnd_toStartOf="@+id/textView52"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView32"
                            app:srcCompat="@drawable/etoile_blanche" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E4EAD8C6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView83"
                    android:layout_width="178dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/dimezell" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="113dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="La Dimezell"
                            android:textColor="#5f4b35"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.173"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView53"
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="44dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="3,8"
                            android:textColor="#5f4b35"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.279"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="119dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="80dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="Voir la fiche"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#5f4b35"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.51"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ajout3"
                            android:layout_width="155dp"
                            android:layout_height="31dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="112dp"
                            android:background="@drawable/paiement"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:gravity="center"
                            android:text="Ajouter au panier"
                            android:textAppearance="@style/paiement"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView93"
                            android:layout_width="28dp"
                            android:layout_height="26dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="1dp"
                            app:layout_constraintEnd_toStartOf="@+id/textView53"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView33"
                            app:srcCompat="@drawable/etoile_blanche" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="347dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="715dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="657dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#19232F">

            <ImageButton
                android:id="@+id/btnPanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/panier_blanc" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/search_blanc" />

            <ImageButton
                android:id="@+id/btnPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/scan_blanc" />

            <ImageButton
                android:id="@+id/btnUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/user_blanc" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/coeur" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>