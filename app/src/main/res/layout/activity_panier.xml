<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E4CF"
    tools:context=".Panier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9E4CF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-49dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:fontFamily="@font/caviar_dreams_bold"
            android:paddingTop="30dp"
            android:text="Mon Panier"
            android:textColor="#5F4B35"
            android:textAlignment="center"
            android:textSize="27dp" />

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="1 x La Trappe"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnMoins"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="#F9E4CF"
                android:paddingLeft="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/quantite_moins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="1"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="41dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="#F9E4CF"
                android:paddingRight="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/quantite_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="2,70€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Livraison"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="238dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="1,50€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Taxe"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="260dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="Incluse"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:text="Total"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Space
                android:layout_width="257dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caviar_dreams_bold"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="4,20€"
                android:textColor="#5F4B35"
                android:textAlignment="center"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/promo"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/promo"
                android:gravity="center"
                android:textSize="12dp"
                android:fontFamily="@font/caviar_dreams_bold"
                android:text="Code promo"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="50dp"

                android:textAppearance="@style/promo" />

            <TextView
                android:id="@+id/paiement"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/paiement"
                android:fontFamily="@font/caviar_dreams_bold"
                android:gravity="center"
                android:text="Paiement"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/paiement"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous aimerez aussi..."
            android:fontFamily="@font/caviar_dreams"
            android:textSize="20dp"
            android:textColor="#5F4B35"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="347dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="715dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="659dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#19232F">

            <ImageButton
                android:id="@+id/btnPanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/panier_blanc" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/search_blanc" />

            <ImageButton
                android:id="@+id/btnPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/scan_blanc" />

            <ImageButton
                android:id="@+id/btnUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/user_blanc" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/coeur" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>