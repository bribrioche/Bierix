<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:backgroundTint="#F9E4CF"
    tools:context=".creation_account">

    <ImageView
        android:id="@+id/button_inscription_bierix"
        android:layout_width="83dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_bierix_sans_fond" />

    <TextView
        android:id="@+id/Inscription_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/caviar_dreams"
        android:text="Inscription"
        android:textColor="#AC8B6A"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/identifiant_txt_insc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/caviar_dreams"
        android:layout_marginTop="195dp"
        android:text="Identifiant"
        android:textColor="#AC8B6A" />

    <EditText
        android:id="@+id/identifiant_input"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:fontFamily="@font/caviar_dreams_italic"
        android:hint="Identifiant"
        android:inputType="textPersonName"
        android:textColor="#5f4b35"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/mail_txt_insc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/caviar_dreams"
        android:layout_marginTop="265dp"
        android:text="Email"
        android:textColor="#AC8B6A" />

    <EditText
        android:id="@+id/mail_input"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:fontFamily="@font/caviar_dreams_italic"
        android:hint="example@gmail.com"
        android:inputType="textPersonName"
        android:textColor="#5f4b35"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/mdp_txt_insc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/caviar_dreams"
        android:layout_marginTop="335dp"
        android:text="Mot de passe"
        android:textColor="#AC8B6A" />

    <EditText
        android:id="@+id/psswd_input"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:fontFamily="@font/caviar_dreams_italic"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#5f4b35"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/remdp_txt_insc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/caviar_dreams"
        android:layout_marginTop="405dp"
        android:text="Retaper votre mot de passe"
        android:textColor="#AC8B6A" />

    <EditText
        android:id="@+id/repsswd_input"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        android:ems="10"
        android:fontFamily="@font/caviar_dreams_italic"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="#5f4b35"
        android:textStyle="italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#ac8b6a"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Inscription_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/caviar_dreams"
                android:text="S'inscrire"
                android:textColor="#fff"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>