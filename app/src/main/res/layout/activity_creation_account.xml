<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:backgroundTint="#F9E4CF"
    tools:context=".creation_account">

    <TextView
        android:id="@+id/Inscription_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/CaviarDreams"
        android:text="Inscription"
        android:textColor="#AC8B6A"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/identifiant_input"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:fontFamily="@font/CaviarDreams_Italic"
        android:hint="  Identifiant"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/psswd_input"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:drawableLeft="@drawable/ic_action_psswd"
        android:ems="10"
        android:fontFamily="@font/CaviarDreams_Italic"
        android:hint="  Mot de passe"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#ac8b6a"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Inscription_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/CaviarDreams"
                android:text="S'inscrire"
                android:textColor="#fff"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/retour_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text="Retour"
        android:textColor="#AC8B6A" />

</RelativeLayout>