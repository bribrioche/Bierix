<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:backgroundTint="#F9E4CF"
    tools:context=".Description_biere">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nom_biere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="90dp"
                    android:fontFamily="@font/caviar_dreams_bold"
                    android:text="La Trappe"
                    android:textColor="@color/dark_brown_bierix"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    app:srcCompat="@drawable/coeur" />

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-40dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/coeur_plein"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/imagebiere_trappe"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/latrappe_biere" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/ellipse_7"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/pastille_blonde" />

                        <TextView
                            android:id="@+id/typebiere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/caviar_dreams_bold"
                            android:text="Blonde"
                            android:textColor="#5f4b35" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageplus"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/plus" />

                        <TextView
                            android:id="@+id/degre_alcool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="6,5% alcool"
                            android:textColor="#5f4b35" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageplus2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/plus" />

                        <TextView
                            android:id="@+id/IBU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="40 IBU"
                            android:textColor="#5f4b35" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/etoilenote"
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/etoile_blanche" />

                        <TextView
                            android:id="@+id/note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="3,8"
                            android:textColor="#5f4b35" />

                        <TextView
                            android:id="@+id/notenbr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="(127 votes)"
                            android:textColor="#5f4b35"
                            android:textSize="8sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/Divider.Horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/caviar_dreams_bolditalic"
                    android:text="La Trappe est une bière trappiste,\nbrassée à l'abbaye Notre-Dame de Koningshoeven\n près de Tilbourg, aux Pays-Bas.\nLa Trappe est la bière trappiste comptant le plus\nde variétés avec 9 types de bières commercialisées."
                    android:textAlignment="center"
                    android:textColor="#5f4b35" />

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/paiement"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop = "15dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/paiement_redirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caviar_dreams_bold"
                        android:gravity="center_horizontal"
                        android:text="2,70€"
                        android:textAppearance="@style/paiement"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/ajoutpanier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ajouter au panier"
                        android:textSize="18dp"
                        android:fontFamily="@font/caviar_dreams_bold"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/caviar_dreams_bold"
                    android:text="Avis des utilisateurs"
                    android:textColor="@color/dark_brown_bierix"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:srcCompat="@drawable/avis" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="Voir tous les avis..."
                    android:textColor="@color/dark_brown_bierix"
                    android:textSize="12dp" />

                <View
                    style="@style/Divider.Horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/stars" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/avis_box"
                    android:ems="10"
                    android:fontFamily="@font/caviar_dreams_italic"
                    android:hint="J'écris mon avis...(optionnel)"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/dark_brown_bierix"
                    android:textColorHint="@color/dark_brown_bierix" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/promo"
                    android:padding="10dp"
                    android:text="Donner son avis"
                    android:textSize="20dp"
                    android:fontFamily="@font/caviar_dreams_bold"
                    android:textColor="@color/dark_brown_bierix"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="788dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="-130dp"
            android:background="#19232F">

            <ImageButton
                android:id="@+id/btnPanier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/panier_blanc" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/search_blanc" />

            <ImageButton
                android:id="@+id/btnPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/scan_blanc" />

            <ImageButton
                android:id="@+id/btnUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/user_blanc" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="#19232F"
                android:padding="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/coeur" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>